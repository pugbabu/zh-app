.login-wrapper {
  background: #5aa2e8;
  width: 100%;
  min-height: 100vh;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
      -ms-flex-pack: start;
          justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding-top: 100rpx;
}
.login-wrapper .logo {
  width: 280rpx;
  height: 56rpx;
}
.login-form {
  width: 100%;
  margin-top: 100rpx;
}
.form-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin-bottom: 30rpx;
  padding: 20rpx;
}
.form-item .title {
  text-align: right;
  width: 180rpx;
  color: #17233d;
}
.form-item-input {
  background: #fff;
  width: 60%;
  border-radius: 5rpx;
  height: 60rpx;
  padding-left: 10rpx;
}
.input-placeholder {
  color: #ddd;
}
.login-btn {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  margin-top: 30rpx;
}
.login-button {
  width: 200rpx;
  margin: 0 10rpx;
  color: #2db7f5;
}

