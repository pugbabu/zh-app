
page{
	height: 100%;
	width: 100%;
}
.home-wrapper{
	font-family: GBK Regular;
	position: relative;
	overflow-x: hidden;
	height: 100%;
	width: 100%;
}
.home-head{
	background: #5886fc;
	width: 100%;
	color: #fff;
	font-size: 16px;
	height: 250px;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	border-radius: 0 0 15% 15%;
	padding-top: 50rpx;
	overflow: hidden;
}
.head-bg{
	width: 400rpx;
	height: 220rpx;
	position: absolute;
	right: -100rpx;
	top: -10rpx;
}
.home-head-content{
	width: 660rpx;
	margin: 0 auto;
	position: relative;
}
.home-head-content .message{
	position: absolute;
	right: 0;
	top: -20rpx;
}
.home-head-content .message image{
	width: 48rpx;
	height: 48rpx;
}
.message-num{
	position: absolute;
	right: -14rpx;
	top: -10rpx;
	width: 34rpx;
	height: 34rpx;
	line-height: 34rpx;
	border-radius: 50%;
	background: red;
	color: #fff;
	text-align: center;
}
.home-content{
	width: 660rpx;
	height: 800rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	position: absolute;z-index: 99;
	top: 100px;
	left: 50%;
	-webkit-transform: translateX(-50%);
	    -ms-transform: translateX(-50%);
	        transform: translateX(-50%);
	background: #fff;
	-webkit-box-shadow: 0 0 20rpx #999;
	        box-shadow: 0 0 20rpx #999;
	border-radius: 10px;
	padding-top: 80rpx;
	/* padding: 60rpx 15rpx; */
	overflow: hidden;
	/* display: flex;
	flex-wrap: wrap;
	flex-direction: row; */
}
.home-item{
	float: left;
	width: 220rpx;
	text-align: center;
	margin-bottom: 120rpx;
}
.home-item image{
	width: 64rpx;
	height: 64rpx;
}
.home-item .title{
	color: #333;
	font-size: 14px;
	line-height: 20px;
	margin-top: 20rpx;
	font-family: GBK Regular;
}
.more-wrapper{
	width: 600rpx;
	height: 80rpx;
	position: absolute;
	bottom: 60rpx;
	left: 50%;
	-webkit-transform: translateX(-50%);
	    -ms-transform: translateX(-50%);
	        transform: translateX(-50%);
	border-radius: 40rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-shadow: 0 0 6rpx #999;
	        box-shadow: 0 0 6rpx #999;
	padding: 5rpx 0;
}
.more-item{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	font-size: 14px;
	font-family: GBK Regular;
}
.more-item image{
	width: 40rpx;
	height: 40rpx;
}

